{
  "name": "@codemcp/prompts",
  "version": "1.0.0",
  "description": "MCP server that exposes prompts from markdown files via stdio and HTTP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mcp-prompts-server": "dist/bin.js"
  },
  "files": [
    "dist",
    "resources",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean:build": "rimraf ./dist",
    "dev": "nodemon",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/node-server": "1.19.6",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@types/handlebars": "4.0.40",
    "gray-matter": "^4.0.3",
    "handlebars": "4.7.8",
    "hono": "4.10.7",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@types/node": "^22.10.1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompts",
    "markdown",
    "ai",
    "assistant"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mrsimpson/prompts-mcp.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/mrsimpson/prompts-mcp#readme",
  "bugs": {
    "url": "https://github.com/mrsimpson/prompts-mcp/issues"
  },
  "author": "Oliver Jaegle",
  "license": "MIT"
}
