{
  "name": "@prompts-mcp/server",
  "version": "0.1.0",
  "description": "MCP server that exposes prompts from markdown files via stdio and HTTP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mcp-prompts-server": "dist/bin.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean:build": "rimraf ./dist",
    "dev": "nodemon",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.14",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@types/node": "^22.10.1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompts",
    "markdown",
    "ai",
    "assistant"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mcp-prompts-server",
    "directory": "packages/mcp-server"
  },
  "license": "MIT"
}
